@{
    ViewBag.Title = "New Estimate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Styles/StyleSheet.css" type="text/css" />
<link rel="stylesheet" href="~/Content/jquery-ui.min.css" type="text/css" />
<link rel="stylesheet" href="~/Content/jquery-ui.structures.min.css" type="text/css" />
<link rel="stylesheet" href="~/Content/jquery-ui.theme.min.css" type="text/css" />
<script src="~/Scripts/jquery-ui.min.js" type="text/javascript"></script>

 <script>
  $(function() {
      $("#tabs").tabs();
      $("#datepicker").datepicker();
      $("#datepicker").datepicker('setDate', new Date());
  });
</script>

<h2>New Estimate</h2>

<div class="row">
    <div class="col-xs-8">
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label for="datepicker" class="col-sm-2 control-label">Date:</label>
                <div class="col-sm-4">
                    <input type="text" name="date" id="datepicker" class="form-control" placeholder="Date">
                </div>
            </div>
            <div class="form-group">
                <label for="road" class="col-sm-2 control-label">Road:</label>
                <div class="col-sm-8">
                    <input name="road" id="road" class="form-control" placeholder="Enter the road">
                </div>
            </div>
        </form>
    </div>
</div>

<div id="tabs">
<ul>
<li><a href="#tabs-1">Material</a></li>
<li><a href="#tabs-2">Equipment</a></li>
<li><a href="#tabs-3">Labor</a></li>
</ul>
