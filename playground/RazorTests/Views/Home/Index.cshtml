@model RazorTests.Models.LoginModel

@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>

@{
    var grid = (WebGrid)ViewBag.Grid;
    var authors = ViewBag.Authors;
    var categories = ViewBag.Categories;
}

<html lang="en">
    <head>
        <title>Home</title>
        <meta charset="utf-8" />
        <script src="~/Scripts/jquery-1.9.1.min.js" type="text/javascript"></script>
        <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
        <link rel="stylesheet" href="~/Styles/Login.css" type="text/css" />
        <link rel="stylesheet" href="~/Content/bootstrap.min.css">
        
        <script>
            $(function () {
                // $('#login').hide();     // Change to hide when done testing.

                $('#registered-user-login').click(function () {
                    showRegisteredUserLogin();
                    hideGuestLogin();
                });
            });

            function showRegisteredUserLogin() {
                $('#login').fadeIn(500, function() {$('#login').show();});
            }

            function hideGuestLogin() {
                // Does nothing for the moment.
            }

            function rememberMe() {
                $('.checkbox').toggleClass('show');
            }

        </script>
    </head>

    <body>
        <p class="center-text">Welcome to the dpworks.org, your public works management site.</p>
        <ol class="round">
            <li>
                <h5 class="center-text" id="registered-user-login">Registered Users: Click here to login.</h5>
                @Html.Partial("_BootstrapLogin")
                @Html.Partial("_ForgotPasswordFlyout")
            </li>

            <li>
                <h5 class="center-text">Interested in trying the site?  Login as a guest. -> TBD</h5>
            </li>

            <li>
                <h5 class="center-text">What we do</h5>
                <p>Coming soon...</p>
            </li>
        </ol>
    </body>
</html>
            